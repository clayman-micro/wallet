upstream {{ project_name }}_cluster {
    server {{ project_socket }};
}

{% if not environment == 'vagrant' %}
server {
    listen 80;
    server_name {{ project_domain }};
    return 301 https://$server_name$request_uri;
}
{% endif %}

server {
    {% if environment == 'vagrant' %}
    listen 80 default;
    {% else %}
    listen 443 default ssl;
    {% endif %}
    server_name {{ project_domain }};

    ssl_certificate /etc/nginx/certs/{{ project_name }}/{{ project_name }}.crt;
    ssl_certificate_key /etc/nginx/certs/{{ project_name }}/{{ project_name }}.key;
    ssl_verify_depth 3;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

    index index.html;

    set $project_root /var/www/{{ project_name }}/assets/build;

    location ~* ^/(api|auth)(?:.*)$ {
        proxy_pass http://wallet_cluster;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $server_name;
    }

    location ~* ^/((?:.*)\.(?:eot|ttf|woff|png|js|css))$ {
        root $project_root;
    }

    location / {
        root $project_root;
        rewrite ^ /index.html break;
    }
}
