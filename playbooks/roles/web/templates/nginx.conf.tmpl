
upstream {{ project_name }}_cluster {
    server {{ project_socket }};
}

server {
    listen 80;
    server_name {{ project_domain }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 default ssl;
    server_name {{ project_domain }};

    ssl_certificate /etc/nginx/certs/cert.crt;
    ssl_certificate_key /etc/nginx/certs/cert.key;
    ssl_verify_depth 3;
    ssl_protocols TLSv1 TLSv1.1 TLSv1.2;

    index index.html;

    set $project_root /var/www/{{ project_name }};

    location /assets/ {
        alias $project_root/build/;
        access_log off;
    }

    location / {
        root $project_root;
{#         {% if project_assets %}
            root {{ project_assets }}/assets/build;
        {% else %}
            root {{ project_root }}/{{ project_name }}/assets/build;
        {% endif %}
 #}
        error_page 404 = @fallback;
    }

    location @fallback {
        proxy_pass http://{{ project_name }}_cluster;

        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Host $server_name;
    }
}
