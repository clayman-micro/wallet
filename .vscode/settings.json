{
  "files.exclude": {
      ".cache": true,
      ".idea": true,
      ".mypy_cache": true,
      ".python-version": true,
      ".scannerwork": true,
      ".sonarlint": true,
      ".vagrant": true,
      ".vscode": true,
      "**/__pycache__": true,
      "**/.cache": true,
      "**/.coverage": true,
      "**/.DS_Store": true,
      "**/.idea": true,
      "**/.mypy_cache": true,
      "**/.ruff_cache": true,
      "**/.pytest_cache": true,
      "**/.sonarlint": true,
      "**/.tox": true,
      "**/.venv": true,
      "**/*.egg-info": true,
      "**/*.py[co]": true,
      "**/*.retry": true,
      "**/coverage*": true,
      "**/dist": true,
      "**/htmlcov": true,
      "**/node_modules": true,
      "**/pip-wheel-metadata": true,
      "**/venv": true,
      "**/py.typed": true
  },

  "files.watcherExclude": {
      "**/.git/objects/**": true,
      "**/.git/subtree-cache/**": true,
      "**/node_modules/*/**": true
  },

  "editor.rulers": [88],

  "mypy-type-checker.path": ["${workspaceFolder}/.venv/bin/mypy"],
  "mypy-type-checker.interpreter": ["${workspaceFolder}/.venv/bin/python"],
  "mypy-type-checker.importStrategy": "fromEnvironment",
  "mypy-type-checker.severity": { "error": "Error", "note": "Information", "name-defined": "Warning" },
  "mypy-type-checker.preferDaemon": true,
  "mypy-type-checker.reportingScope": "workspace",


  "python.testing.pytestEnabled": false,

  "python.envFile": "${workspaceFolder}/.env",
  "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
  "python.poetryPath": "poetry",

  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,

  "python.analysis.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/.venv/lib/python3.11",
  ],

  "python.autoComplete.extraPaths": [
    "${workspaceFolder}",
    "${workspaceFolder}/.venv/lib/python3.11",
    "${workspaceFolder}/.venv/lib/python3.11/site-packages"
  ],

  "pytest.command": "${workspaceFolder}/.venv/bin/pytest",

  "ruff.path": ["${workspaceFolder}/.venv/bin/ruff"],

  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.fixAll": true,
      "source.organizeImports": true
    },
  }
}
